    <Lang>sheikah</Lang>
    <SelectionGroupName>units/sheikah/sheikah_spy_b</SelectionGroupName>
    <Tooltip>Scout unit that can detect Camouflaged and Stealthed units. The Spy is stealthed.</Tooltip>
    <VisibleClasses datatype="tokens">Scout</VisibleClasses>
  </Identity>
