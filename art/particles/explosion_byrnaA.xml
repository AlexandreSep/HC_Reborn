    <uniform name="angle" min="-7.3" max="7.3"/>

    <uniform name="velocity.x" min="-5.1" max="5.1"/>
    <uniform name="velocity.y" min="5.0" max="5.1"/>
    <uniform name="velocity.z" min="-5.1" max="5.1"/>
    <uniform name="velocity.angle" min="-5.1" max="5.1"/>

    <uniform name="size" min="3.5" max="6.7"/>
	
    <uniform name="color.b" min="9.8" max="10.0"/>
    <copy name="color.g" from="color.b"/>
