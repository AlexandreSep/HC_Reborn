<particles>

    <texture>art/textures/particles/fi_sparkleA.dds</texture>
    <blend mode="add"/>
	
    <constant name="emissionrate" value="55.0"/>
    <uniform name="lifetime" min="0.5" max="3.0"/>

	<uniform name="position.x" min="-3.5" max="3.5"/>
