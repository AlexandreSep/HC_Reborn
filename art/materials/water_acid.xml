<?xml version="1.0" encoding="utf-8"?>
<material>
    <shader effect="model_water"/>
	<alpha_blending/>
    <define name="USE_TRANSPARENT" value="1"/>
    <define name="USE_ALPHATEST" value="1"/>
    <renderquery name="water_tex"/>
    <renderquery name="sky_cube"/>
    <renderquery name="sim_time"/>
    
    <uniform name="shininess" value="5.0"/>
    <uniform name="specularStrength" value="0.25"/>
    <uniform name="waviness" value="0.1"/>
    <uniform name="waterTint" value="0.3 1.0 0.1"/>
    <uniform name="murkiness" value="0.5"/>
    <uniform name="reflectionTint" value="0.3 1.0 0.1"/>
    <uniform name="reflectionTintStrength" value="0.90"/>
	<required_texture name="baseTex"/>		
</material>
